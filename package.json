{
  "private": true,
  "license": "GPL-3.0",
  "author": "Christo <christo@cryptodrunks.net>",
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "yarn clean && yarn compile && yarn lint && yarn test",
    "check": "eslint --print-config .eslintrc.json | eslint-config-prettier-check",
    "clean": "rimraf packages/**/_dist",
    "clean-mods": "lerna clean --yes",
    "compile": "lerna exec --parallel -- babel --root-mode upward lib -d _dist",
    "coverage": "cross-env NODE_ENV=test nyc mocha -t 6000 -r test/helpers.js test/**/*.spec.js",
    "coverage:report": "run-s coverage coverage:lcov",
    "coverage:lcov": "nyc report --reporter=text-lcov > lcov.info",
    "docs": "node ./scripts/make-docs.js",
    "fix": "yarn lint --fix",
    "lint": "eslint packages/**/lib/**/*.js test/**/*.js boilerplate-plugin/lib/**/*.js scripts/**/*.js",
    "prerelease": "yarn clean && yarn compile && yarn lint && yarn test && yarn test:e2e",
    "release": "lerna publish --conventional-commits -m \"chore(release): Bumped to version %s.\"",
    "setup": "yarn clean-mods && yarn install && lerna bootstrap && yarn compile",
    "test": "yarn test:mocha",
    "test:all": "run-p --aggregate-output --continue-on-error 'test:!(all)'",
    "test:e2e": "find project/issues/*.json -type f -print0 | parallel -0 packages/cli/bin/sugarcube.js -c",
    "test:mocha": "cross-env NODE_ENV=test mocha -c -t 6000 -r @babel/register -r test/helpers.js test/**/*.spec.js",
    "watch": "yarn compile -w --verbose",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@babel/register": "^7.13.16",
    "@istanbuljs/nyc-config-babel": "^3.0.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-istanbul": "^6.0.0",
    "benchmark": "^2.1.4",
    "bluebird": "^3.5.5",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.4",
    "cross-env": "^7.0.3",
    "dashp": "^0.10.1",
    "eslint": "^7.27.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-lodash-fp": "^2.2.0-a1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^6.0.0",
    "jsverify": "^0.8.4",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "lodash": "^4.17.21",
    "mdast-util-to-string": "^1.0.6",
    "mocha": "^8.4.0",
    "moment": "^2.29.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.3.0",
    "prettier-package-json": "^2.6.0",
    "remark-parse": "^6.0.3",
    "remark-stringify": "^6.0.4",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.1",
    "unified": "^7.1.0",
    "unist-builder": "^1.0.4",
    "unist-util-find": "^1.0.1",
    "unist-util-find-after": "^2.0.4",
    "unist-util-find-all-after": "^1.0.4",
    "unist-util-find-all-between": "^1.0.4",
    "validate-commit-msg": "^2.14.0"
  },
  "lint-staged": {
    "{*.json,*rc}": "prettier --parser json --write",
    "**/package.json": "prettier-package-json --write",
    "{*.js}": "eslint --fix"
  }
}
