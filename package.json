{
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "precommit": "lint-staged",
    "commitmsg": "! git rev-parse --abbrev-ref HEAD | grep -q master || validate-commit-msg",
    "test": "mocha -c -R progress --compilers js:babel-register -r test/helpers.js packages/**/test/*.spec.js",
    "check": "eslint --print-config .eslintrc.json | eslint-config-prettier-check",
    "lint": "eslint **/lib/**/*.js **/test/**/*.js",
    "fix": "npm run lint -- --fix",
    "clean": "rimraf packages/**/_dist",
    "clean-mods": "for i in packages/*; do rimraf $i/node_modules; done; rimraf node_modules",
    "precompile": "npm run clean",
    "compile": "for i in packages/*; do babel -d $i/_dist $i/lib; done",
    "build": "npm run lint && npm run test && npm run compile",
    "release": "lerna publish --conventional-commits -m \"chore(release): Bumped to version %s.\""
  },
  "author": "Christo <christo@cryptodrunks.net>",
  "license": "GPL-3.0",
  "devDependencies": {
    "@sugarcube/eslint-config-sugarcube": "^0.2.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "eslint": "^4.6.1",
    "husky": "^0.14.3",
    "jsverify": "^0.8.3",
    "lerna": "^2.1.2",
    "lint-staged": "^4.2.3",
    "mocha": "^3.5.2",
    "prettier": "^1.7.0",
    "rimraf": "^2.6.2",
    "sinon": "^3.2.1",
    "validate-commit-msg": "^2.14.0"
  }
}
