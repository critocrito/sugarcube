{
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "precommit": "lint-staged",
    "commitmsg": "! git rev-parse --abbrev-ref HEAD | grep -q master || validate-commit-msg",
    "test": "mocha -c -R progress --compilers js:babel-register -r test/helpers.js packages/**/test/*.spec.js",
    "check": "eslint --print-config .eslintrc.json | eslint-config-prettier-check",
    "lint": "eslint **/lib/**/*.js **/test/**/*.js",
    "fix": "npm run lint -- --fix",
    "clean": "rimraf packages/**/_dist",
    "clean-mods": "for i in packages/*; do rimraf $i/node_modules; done; rimraf node_modules",
    "compile": "make compile",
    "build": "npm run clean && npm run lint && npm run test && npm run compile",
    "release": "npm run build && lerna publish --conventional-commits -m \"chore(release): Bumped to version %s.\"",
    "setup": "npm run clean-mods && make setup && npm run compile"
  },
  "author": "Christo <christo@cryptodrunks.net>",
  "license": "GPL-3.0",
  "devDependencies": {
    "@sugarcube/eslint-config-sugarcube": "^0.2.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "eslint": "^4.9.0",
    "husky": "^0.14.3",
    "jsverify": "^0.8.3",
    "lerna": "^2.4.0",
    "lint-staged": "^4.2.3",
    "mocha": "^4.0.1",
    "prettier": "^1.7.0",
    "rimraf": "^2.6.2",
    "sinon": "^4.0.1",
    "validate-commit-msg": "^2.14.0"
  }
}
