{
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "precommit": "! git rev-parse --abbrev-ref HEAD | grep -q master || lint-staged",
    "commitmsg": "! git rev-parse --abbrev-ref HEAD | grep -q master || validate-commit-msg",
    "test-mocha": "cross-env NODE_ENV=test mocha -c -R progress -t 6000 -r babel-core/register -r babel-polyfill -r test/helpers.js test/**/*.spec.js",
    "test-ava": "cross-env NODE_ENV=test ava test/plugin-workflow/*.js",
    "test": "npm run test-mocha",
    "test-e2e": "cd project && npm run test-parallel",
    "coverage": "cross-env NODE_ENV=test nyc npm test",
    "check": "eslint --print-config .eslintrc.json | eslint-config-prettier-check",
    "lint": "eslint packages/**/lib/**/*.js test/**/*.js boilerplate-plugin/lib/**/*.js scripts/**/*.js",
    "fix": "npm run lint -- --fix",
    "clean": "rimraf packages/**/_dist",
    "clean-mods": "lerna clean --yes",
    "compile": "make compile",
    "watch": "make watch",
    "build": "npm run clean && npm run compile && npm run lint && npm run test",
    "prerelease": "npm run test && npm run test-e2e",
    "release": "npm run build && lerna publish --conventional-commits -m \"chore(release): Bumped to version %s.\"",
    "setup": "npm run clean-mods && make setup && npm run compile"
  },
  "author": "Christo <christo@cryptodrunks.net>",
  "license": "GPL-3.0",
  "devDependencies": {
    "@sugarcube/eslint-config-sugarcube": "^0.2.0",
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-syntax-async-generators": "^6.13.0",
    "babel-plugin-syntax-trailing-function-commas": "^6.22.0",
    "babel-plugin-transform-async-generator-functions": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "benchmark": "^2.1.4",
    "bluebird": "^3.5.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.2",
    "cross-env": "^5.1.6",
    "dashp": "^0.9.0",
    "eslint": "^4.9.0",
    "husky": "^0.14.3",
    "jsverify": "^0.8.3",
    "lerna": "^3.4.1",
    "lint-staged": "^7.0.0",
    "lodash": "^4.17.4",
    "mocha": "^5.0.1",
    "moment": "^2.19.1",
    "nyc": "^12.0.2",
    "prettier": "^1.7.0",
    "rimraf": "^2.6.2",
    "sinon": "^4.0.1",
    "validate-commit-msg": "^2.14.0"
  },
  "ava": {
    "sources": [
      "packages/*/lib/*.js"
    ],
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  }
}
