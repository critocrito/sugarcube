#!/bin/sh

node --max-old-space-size=4096 -e 'const path=require("path"); const args = process.argv.slice(1); process.argv = [path.join(process.cwd(), "sugarcube"), "sugarcube"].concat(args); require("source-map-support").install(); require(path.join(process.cwd(), "node_modules/@sugarcube/cli/_dist/cli"));' -- $@
